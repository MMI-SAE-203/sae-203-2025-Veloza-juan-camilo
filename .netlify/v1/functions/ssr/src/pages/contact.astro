---
import Layout from "../layouts/Layout.astro";
import Button from "../components/Button.astro";
import Star from "../assets/icons/Star.svg";
---

<Layout
  title="Contact - Festival Flash Cinéma 25"
  description="Contactez-nous pour toute question concernant le Festival Flash Cinéma 25"
>
  <div class="px-6 py-6 lg:grid lg:grid-cols-13 lg:gap-8 lg:px-12 lg:py-10">
    <div class="lg:col-span-13">
      <h1 class="text-6xl lg:text-8xl">NOUS CONTACTER</h1>
      <Star class="mt-4" />
    </div>

    <div class="lg:col-span-8 lg:order-1 mt-8">
      <form class="space-y-6">
        <div class="lg:grid lg:grid-cols-2 lg:gap-6 space-y-6 lg:space-y-0">
          <div>
            <label for="nom" class="block text-sm font-medium text-gray-700"
              >Nom</label
            >
            <input
              type="text"
              id="nom"
              name="nom"
              required
              class="mt-1 w-full h-12 rounded-full border border-gray-300 px-4 focus:outline-none focus:ring-2 focus:ring-[var(--color-violet)]"
            />
          </div>
          <div>
            <label for="prenom" class="block text-sm font-medium text-gray-700"
              >Prénom</label
            >
            <input
              type="text"
              id="prenom"
              name="prenom"
              required
              class="mt-1 w-full h-12 rounded-full border border-gray-300 px-4 focus:outline-none focus:ring-2 focus:ring-[var(--color-violet)]"
            />
          </div>
        </div>

        <div>
          <label for="email" class="block text-sm font-medium text-gray-700"
            >E-mail</label
          >
          <input
            type="email"
            id="email"
            name="email"
            required
            class="mt-1 w-full h-12 rounded-full border border-gray-300 px-4 focus:outline-none focus:ring-2 focus:ring-[var(--color-violet)]"
          />
        </div>

        <div>
          <label for="sujet" class="block text-sm font-medium text-gray-700"
            >Sujet</label
          >
          <select
            id="sujet"
            name="sujet"
            required
            class="mt-1 w-full h-12 rounded-full border border-gray-300 px-4 focus:outline-none focus:ring-2 focus:ring-[var(--color-violet)]"
          >
            <option value="" disabled selected>Choisissez un sujet</option>
            <option value="information">Demande d'information</option>
            <option value="reservation">Question sur les réservations</option>
            <option value="programme">Question sur le programme</option>
            <option value="partenariat">Proposition de partenariat</option>
            <option value="autre">Autre</option>
          </select>
        </div>

        <div>
          <label for="message" class="block text-sm font-medium text-gray-700"
            >Message</label
          >
          <textarea
            id="message"
            name="message"
            rows="6"
            required
            class="mt-1 w-full rounded-2xl border border-gray-300 px-4 py-3 focus:outline-none focus:ring-2 focus:ring-[var(--color-violet)]"
          ></textarea>
        </div>

        <div class="flex items-center">
          <input
            type="checkbox"
            id="privacy"
            name="privacy"
            required
            class="h-5 w-5 text-[var(--color-violet)] rounded focus:ring-[var(--color-violet)]"
          />
          <label for="privacy" class="ml-2 block text-sm text-gray-700">
            J'ai lu et j'accepte la <a
              href="/politiqueconfi"
              class="text-[var(--color-violet)] underline hover:text-[var(--color-violet-obscure)]"
              >politique de confidentialité</a
            >.
          </label>
        </div>

        <div class="flex justify-center lg:justify-start">
          <Button variant="violet" type="submit">ENVOYER</Button>
        </div>
      </form>
    </div>

    <div class="mt-12 lg:col-span-5 lg:order-2 lg:mt-8">
      <div>
        <h2 class="text-2xl mb-6 font-medium">INFORMATIONS DE CONTACT</h2>

        <div class="space-y-4">
          <div>
            <p class="text-sm text-gray-700">Adresse mail:</p>
            <a
              href="mailto:festivalflashcinema25@gmail.com"
              class="font-medium hover:text-[var(--color-violet)]"
              >festivalflashcinema25@gmail.com</a
            >
          </div>

          <div>
            <p class="text-sm text-gray-700">Numéro de contact:</p>
            <a
              href="tel:+33076566897"
              class="font-medium hover:text-[var(--color-violet)]"
              >+33 07 65 66 89 77</a
            >
          </div>

          <div>
            <p class="text-sm text-gray-700">Adresse postale:</p>
            <address class="not-italic font-medium">
              Festival Flash Cinéma 25<br />
              25250 Ornans<br />
              France
            </address>
          </div>
        </div>
      </div>

      <div class="mt-8">
        <div class="aspect-[4/3] w-full bg-gray-100 rounded-lg overflow-hidden">
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d21534.991560114578!2d6.127265776619741!3d47.10533065440153!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x478db2632eb4a9ed%3A0xd58b539c0c224332!2s25290%20Ornans!5e0!3m2!1sfr!2sfr!4v1663501263440!5m2!1sfr!2sfr"
            width="100%"
            height="100%"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
          >
          </iframe>
        </div>
      </div>
    </div>
  </div>
</Layout>
