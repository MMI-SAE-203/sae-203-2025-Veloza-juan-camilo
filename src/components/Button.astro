---
const { href, variant, classes } = Astro.props;

const variantClass = {
  beige: "bg-[var(--color-beige)] text-black hover:bg-[#e8d6b8]",
  violet:"bg-[var(--color-violet-obscure)] text-[var(--color-beige)] hover:bg-[#201f38]",
  outlinew:"border-2 border-white text-white hover:shadow-[inset_0_0_0_8px_rgba(255,255,255,0.2)]",
  outlineb: "border-2 border-black text-black hover_shadow-[inset_0_0_0_8px_rgba(0,0,0,0.2)]",
  default: "bg-[var(--color-beige)] text-black",
};
---

<a
  class:list={[
    "rounded-4xl inline-flex items-center gap-4  px-15 py-3 text-xs font-bold uppercase tracking-wide transition duration-300 ease-in-out lg:px-15 lg:py-6 lg:text-sm",
    variantClass[variant] || variantClass.default,
    classes,
  ]}
  href={href}
>
  <slot />
</a>
