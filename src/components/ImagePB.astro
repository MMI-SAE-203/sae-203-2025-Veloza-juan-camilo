---
import { pb } from "../js/backend.js";

const {
    record,
    field = "imgUrl",
    alt,
    classPicture,
    classImg,
    thumb = "1024x1024",
} = Astro.props;

const imageUrl = record?.[field]
    ? pb.files.getURL(record, record[field], { thumb })
    : null;
---

{
    imageUrl && (
        <picture class={classPicture}>
            <img class={classImg} src={imageUrl} alt={alt || "Image"} />
        </picture>
    )
}
